{
  "name": "SandboxJS",
  "author": "Jérémy Buget",
  "description": "SandboxJS is a pet project for testing a lot of JS stuff like Webpack, React, Babel, Mocha, Karma, etc.",
  "keywords": [
    "webpack",
    "javascript",
    "karma",
    "mocha",
    "chai",
    "sinon",
    "phantomjs",
    "istambul",
    "eslint",
    "coffeescript",
    "less",
    "jquery"
  ],
  "license": "Apache-2.0",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jbuget/SandboxJS.git"
  },
  "private": false,
  "scripts": {
    "lint": "eslint ./app/**/*.js || true",
    "build": "webpack -d",
    "start": "webpack-dev-server --devtool eval --progress --colors --hot --content-base build",
    "test": "./node_modules/karma/bin/karma start",
    "deploy": "NODE_ENV=production webpack -p"
  },
